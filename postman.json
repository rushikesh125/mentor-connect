          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.collectionVariables.set('session_id', res._id);",
                  "console.log('Session booked:', res._id);",
                  "console.log('Zoom Link:', res.zoomLink);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{mentee_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mentorId\": \"{{mentor_id}}\",\n  \"startTime\": \"2025-12-01T10:00:00Z\",\n  \"topic\": \"How to get into Stanford CS\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bookings",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings"]
            }
